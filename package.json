{
  "author": "Max Monis",
  "contributors": [
    "Max Monis <maxmonis.com>"
  ],
  "description": "A set of vanilla web components (confetti, spinner, toast)",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.5"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./confetti": {
      "types": "./dist/confetti.d.ts",
      "import": "./dist/confetti.js",
      "require": "./dist/confetti.cjs"
    },
    "./confetti.css": {
      "import": "./dist/confetti.css",
      "require": "./dist/confetti.css"
    },
    "./spinner": {
      "types": "./dist/spinner.d.ts",
      "import": "./dist/spinner.js",
      "require": "./dist/spinner.cjs"
    },
    "./spinner.css": {
      "import": "./dist/spinner.css",
      "require": "./dist/spinner.css"
    },
    "./styles.css": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    },
    "./toast": {
      "types": "./dist/toast.d.ts",
      "import": "./dist/toast.js",
      "require": "./dist/toast.cjs"
    },
    "./toast.css": {
      "import": "./dist/toast.css",
      "require": "./dist/toast.css"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web-components",
    "vanilla-js",
    "toast",
    "ui"
  ],
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "name": "htm-elements",
  "repository": "https://github.com/maxmonis/htm-elements",
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite",
    "prod": "npm run build && npm pack"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "confetti": [
        "./dist/confetti.d.ts"
      ],
      "confetti.css": [
        "./dist/confetti.css"
      ],
      "spinner": [
        "./dist/spinner.d.ts"
      ],
      "spinner.css": [
        "./dist/spinner.css"
      ],
      "toast": [
        "./dist/toast.d.ts"
      ],
      "toast.css": [
        "./dist/toast.css"
      ]
    }
  },
  "version": "0.1.7"
}
